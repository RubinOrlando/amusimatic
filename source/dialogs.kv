<SettingsDialog@Popup>:
	title: 'Label Settings'
	auto_dismiss: True
	size_hint: .8, .5

	BoxLayout:
		orientation: 'vertical'
		size_hint: 1, 1

		Widget:
			size_hint: 1, .97
			id: placeholder
			
		Widget:
			size_hint: 1, .03
			
		BoxLayout:
			orientation: 'horizontal'
			size_hint: 1, .1
			
			Widget:
				size_hint: .1, 1
			
			Button
				size_hint: .2, 1
				text: 'OK'
				# on_release: root.save_settings(root)
				
			Widget:
				size_hint: .1, 1
				
			Button
				size_hint: .2, 1
				text: 'Cancel'
				on_release: root.dismiss()
				# on_release: root.undo_changes(root)
				
			Widget:
				size_hint: .1, 1
				
			Button
				size_hint: .2, 1
				text: 'Restore Defaults'
				# on_release: root.restore_defaults(root)

			Widget:
				size_hint: .1, 1