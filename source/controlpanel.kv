#parent = VolumeTempoTab			
<TimeSig@Widget>
	bcolor: [.2, .2, .2, 1]
	numerator: numerator
	denominator: denominator
	ctrl_tabpanel_ref: None
	
	canvas:
		Color:
			rgba: self.bcolor	
		Rectangle:
			pos: self.pos
			size: self.size
					
	Label:
		id: title
		text: 'TIME SIGNATURE:'
		font_size: 10
		size: max(root.size[0], 98), 17
		pos: (root.pos[0], root.pos[1] + 56)

	AdjusterBox:
		id: numerator
		val: 4
		min: 2
		max: 12
		step: 1
		power_of_2: False
		digits: 2
		size: max(root.size[0], 98), 17
		pos: (root.pos[0], root.pos[1] + 32)
		on_val: root.check_numerator()

	Widget:
		id: line
		canvas:
			Color:
				rgba: [1, 1, 1, 1]
			Line:
				points: [int(self.width *.33), int(self.pos[1])+.284, int(self.width *.75), int(self.pos[1])+.284]
				width: 1
		size: max(root.size[0], 98), 2
		pos: (root.pos[0], root.pos[1] + 30)
		
	AdjusterBox:
		id: denominator
		val: 4
		min: 0
		max: 4
		step: 2
		power_of_2: True
		digits: 2
		size: max(root.size[0], 98), 17
		pos: (root.pos[0], root.pos[1] + 6)
		on_val: root.check_denominator()
	
	
