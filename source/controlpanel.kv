<ChannelColor@Widget>
	text: 'color'
	font_sz: 10
	chn_color: [1, 1, 1, 1]
	owner: None
	
	color_btn: color_box
	lbl: lbl
		
	Button:
		id: color_box
		background_normal: ''
		background_color: root.chn_color
		text: ''
		size: 16, 16
		pos: (root.pos[0] + 2, root.pos[1] + (root.size[1]-16.0)/2)
		on_release: root.edit()
		
	Label:
		id: lbl
		markup: True
		text: root.text
		font_size: root.font_sz		
		text_size: self.size
		halign: 'left'
		valign: 'middle'
		size: (root.size[0] - 22.2, root.size[1])    
		pos: (root.pos[0] + 22.2, root.pos[1])
		

		
<ChannelCheck@Widget>:
	text: ''
	font_sz: 10
	active: False	
	
	chk_box: chk_box
	lbl: lbl

	CheckBox:
		id: chk_box
		on_active: root.active = self.active
		size: 19.4, 19.4
		pos: root.pos


	Label:
		id: lbl
		text: root.text
		font_size: root.font_sz		
		text_size: self.size
		halign: 'left'
		valign: 'middle'
		size: (root.size[0] - 22.4, root.size[1])    
		pos: (root.pos[0] + 22.4, root.pos[1])
		
		
		
<ChannelDropDown@DropDown>:
	font_sz: 10
	chn_color: [1, 1, 1, 1]
	bcolor: [.15, .15, .15, 1]
	spn_color: [.5, .5, .5, 1]
	chk_hide: chk_hide
	chk_mute: chk_mute
	midi_voice_idx: 0
	instrument_spnr: instrument_spnr

	canvas:
		Color:
			rgba: self.bcolor	
		Rectangle:
			pos: self.pos
			size: self.size
			
		Color:
			rgba: [.3, .3, .3, .7]
		Line:
			width: 1
			rectangle: self.x, self.y, self.width-1, self.height-1
	
	ChannelCheck:
		id: chk_hide
		text: 'hide'
		font_sz: root.font_sz
		height: 20
		width: root.width
		size_hint_y: None
		on_active: root.hidden = self.active 
		
	ChannelCheck:
		id: chk_mute
		text: 'mute'
		font_sz: root.font_sz				
		height: 20
		width: root.width
		size_hint_y: None
		on_active: root.muted = self.active 
		
	ChannelColor:
		id: pick_color
		font_size: root.font_sz
		chn_color: root.chn_color
		text: 'color'
		owner: root.caller
		height: 20
		width: root.width
		size_hint_y: None	

	USpinner:
		id: instrument_spnr 
		text: root.instruments_list[root.midi_voice_idx]
		background_color: root.spn_color
		values: root.instruments_list
		padding: 4, 5
		font_size: root.font_sz
		text_size: self.size
		halign: 'left'
		valign: 'bottom'
		height: 20
		size_hint_y: None
		on_user_text: root.instrument_selected(self.user_text) 


		
<Channel@Widget>:
	cnum: 0
	hidden: False
	muted: False
	deleted: False
	
	default_chn_color: [0, 0, 0, 0]
	chn_color: self.default_chn_color 
	btn_color: self.chn_color if not self.hidden else sum([self.chn_color[:3],[.05]], [])
	bcolor: [.1, .1, .1, 1]
	
	font_sz: 10	
	font_type: 'i' if self.muted else 'b'
	text: 'CHANNEL ' + str(root.cnum) if self.cnum != 10 else 'PERCUSSION'

	color_btn: color_box
	lbl: lbl
	x_button: x_button
	
	canvas:
		Color:
			rgba: self.bcolor	
		Rectangle:
			pos: self.pos
			size: self.size
			
	Button:
		id: color_box
		background_normal: ''
		background_color: root.btn_color
		text: ''
		size: 16, 16
		pos: (root.pos[0] + 2, root.pos[1] + (root.size[1]-16)/2)
		on_release: root.edit()
		
	Label:
		id: lbl
		markup: True
		text: '[' + root.font_type + ']' + root.text + '[/' + root.font_type + ']'
		font_size: root.font_sz		
		text_size: self.size
		halign: 'left'
		valign: 'middle'
		size: (root.size[0] - 31, root.size[1])
		pos: (root.pos[0] + 20, root.pos[1])
	
	Button:
		canvas.after:
			Color:
				rgba: [.2, .2, .2, .7]
			Line:
				width: 1
				rectangle: self.x, self.y, self.width-1, self.height-1
				
		id: x_button
		background_normal: ''
		background_color: [.15, .15, .15, 1]
		text: 'x'
		font_size: 8
		size: 15, 15
		pos: (root.pos[0] + root.size[0] - 17, root.pos[1] + root.size[1] - 17)
		on_release: root.remove()

	
		
